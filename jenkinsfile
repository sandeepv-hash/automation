pipeline {

  agent any
  
     stages {

            stage("Terraform init") {
           
             steps{

                   sh script: "cd automation;/usr/local/bin/terraform init"
                   
               }
            }
            
            stage("Terraform Plan") {
            
             steps{
                   sh script: "cd automation;/usr/local/bin/terraform plan" 
               }
            }

            stage("Terraform Apply") {
            
             steps{
                   sh script: "cd automation;/usr/local/bin/terraform apply -auto-approve"
               }
            }
            

      }
    }
